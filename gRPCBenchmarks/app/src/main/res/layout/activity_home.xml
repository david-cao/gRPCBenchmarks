<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.grpc.grpcbenchmarks.HomeActivity">

    <Button android:id="@+id/protobuf_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/protobufBenchmarksName"
            android:onClick="showProtobufBenchmarks" />

    <Button android:id="@+id/grpc_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/protobuf_button"
            android:text="@string/grpcBenchmarksName"
            android:onClick="showGrpcBenchmarks" />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/grpc_button"
            android:text="@string/jsonBenchmarksName"
            android:onClick="showJsonBenchmarks" />
</RelativeLayout>
